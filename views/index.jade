.works
  h3 recent works 
  each work in works.slice(0, 3)
    .work
      h4
        a(href="work/" + work.name + '/')= work.title
        date = work.date
        span(title=strftime('%B %d, %Y %H:%M UTC', date), class="pdate")= strftime('%Y.%m.%d', date)
      | !{work.desc}
    hr(class='clear')
a(class='morelink', href='works') older...

.articles
  h3 recent articles
  each article in articles
    .article
      h4
        a(href='article/' + article.name + '/')= article.title
        date = article.date
        span(title=strftime('%B %d, %Y %H:%M UTC', date), class='pdate')
          =strftime('%Y.%m.%d',date)
      | !{article.desc}
      hr(class='clear')
a(class='morelink', href='articles') older...
